{
    "name": "gas",
    "version": "1.0.0",
    "description": "GAS TypeScript + Webpack Starter",
    "main": "index.js",
    "scripts": {
        "build": "(npm run build:backend & npm run build:frontend) && npm run copy:frontend",
        "build:backend": "webpack",
        "build:frontend": "cd frontend && npm run build",
        "copy:frontend": "node copy-frontend.js",
        "build:watch": "webpack --watch",
        "test": "jest",
        "test:watch": "jest --watch",
        "lint": "eslint 'src/**/*.ts'",
        "lint:fix": "eslint --fix 'src/**/*.ts'",
        "format": "prettier --write 'src/**/*.ts' '*.json' '*.js' '*.mjs'",
        "format:check": "prettier --check 'src/**/*.ts' '*.json' '*.js' '*.mjs'",
        "push": "npm run build && npx clasp push",
        "open": "npx clasp open-script"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "type": "commonjs",
    "devDependencies": {
        "@eslint/js": "^9.22.0",
        "@google/clasp": "^3.1.3",
        "@tailwindcss/vite": "^4.1.18",
        "@types/google-apps-script": "^2.0.8",
        "@types/jest": "^30.0.0",
        "clean-webpack-plugin": "^4.0.0",
        "clsx": "^2.1.1",
        "copy-webpack-plugin": "^13.0.1",
        "eslint": "^9.22.0",
        "gas-webpack-plugin": "^2.6.0",
        "jest": "^30.2.0",
        "prettier": "^3.5.3",
        "tailwind-merge": "^3.4.0",
        "tailwindcss": "^4.1.18",
        "ts-jest": "^29.4.6",
        "ts-loader": "^9.5.4",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.28.0",
        "vite-plugin-singlefile": "^2.3.0",
        "webpack": "^5.103.0",
        "webpack-cli": "^6.0.1"
    }
}
